<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="COUIDialogTextAppearance.Title" parent="@style/COUIDialogTextAppearance">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">@dimen/coui_dialog_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?couiAlertDialogTitleTextColor</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <style name="TextAppearance.COUI.List.Title" parent="@style/Base.TextAppearance.AppCompatSupport.Large">
        <item name="android:textSize">@dimen/support_preference_title_size</item>
        <item name="android:textColor">@color/coui_preference_title_color</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <style name="TextAppearance.COUI.Preference.Summary" parent="@style/TextAppearance.AppCompatSupport.Small">
        <item name="android:textSize">@dimen/support_preference_summary_size</item>
        <item name="android:textColor">@color/coui_preference_secondary_text_color</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>
    <style name="Widget.COUI.List.Category.Title" parent="@style/Widget.COUI.List.Category">
        <item name="android:textSize">@dimen/coui_preference_category_text_size</item>
        <item name="android:textColor">@color/coui_preference_secondary_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:id">@android:id/title</item>
        <item name="android:paddingLeft">@dimen/coui_preference_category_text_padding_left</item>
        <item name="android:paddingTop">@dimen/coui_common_category_text_padding_top</item>
        <item name="android:paddingRight">@dimen/coui_preference_category_text_padding_left</item>
        <item name="android:paddingBottom">@dimen/coui_common_category_text_padding_bottom</item>
        <item name="android:minHeight">@dimen/coui_preference_category_text_height</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="preferenceClassificationTextStyle">
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>
</resources>
